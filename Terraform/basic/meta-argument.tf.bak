provider "aws" {
  region = "ap-southeast-2"
}

resource "aws_instance" "myec2" {
  ami           = "ami-0c462b53550d4fca8"
  instance_type = "t3.micro"

  tags = {
    Name = "HelloEarth"
  }


  lifecycle {
    # blocks accidental terraform destroy or replacement of this resource.
    prevent_destroy = true

    # builds a new resource before deleting the old one to reduce downtime.
    # create_before_destroy = true

    # tells Terraform to skip diff and avoid updating those attributes when they drift.
    ignore_changes = [tags, instance_type]

    # ignores all attribute changes, preventing any updates after the initial creation.
    # ignore_changes = all
  }
}
